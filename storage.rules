rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthed() {
      return request.auth != null;
    }

    function roomDocPath(roomCode) {
      return /databases/(default)/documents/artifacts/bross-app/public/data/rooms/$(roomCode);
    }

    function roomUserDocPath(roomCode, uid) {
      return /databases/(default)/documents/artifacts/bross-app/public/data/room_users/$(roomCode + "_" + uid);
    }

    function isRoomHost(roomCode) {
      return isAuthed()
        && firestore.exists(roomDocPath(roomCode))
        && (
          firestore.get(roomDocPath(roomCode)).data.hostUid == request.auth.uid
          || (
            firestore.get(roomDocPath(roomCode)).data.hostUids != null
            && request.auth.uid in firestore.get(roomDocPath(roomCode)).data.hostUids
          )
        );
    }

    function isRoomParticipant(roomCode) {
      return isAuthed()
        && firestore.exists(roomUserDocPath(roomCode, request.auth.uid));
    }

    function isAllowedMediaUpload() {
      return request.resource != null
        && request.resource.size <= 150 * 1024 * 1024
        && request.resource.contentType != null
        && request.resource.contentType.matches('^(audio|video)/.*$');
    }

    function isAllowedLogoUpload() {
      return request.resource != null
        && request.resource.size <= 12 * 1024 * 1024
        && request.resource.contentType != null
        && request.resource.contentType.matches('^image/.*$');
    }

    function isAllowedPhotoUpload() {
      return request.resource != null
        && request.resource.size <= 12 * 1024 * 1024
        && request.resource.contentType != null
        && request.resource.contentType.matches('^image/.*$');
    }

    match /room_uploads/{roomCode}/{fileName} {
      allow read: if isRoomHost(roomCode);
      allow create: if isRoomHost(roomCode) && isAllowedMediaUpload();
      allow delete: if isRoomHost(roomCode);
      allow update: if false;
    }

    match /room_branding/{roomCode}/{fileName} {
      allow read: if isRoomHost(roomCode);
      allow create: if isRoomHost(roomCode) && isAllowedLogoUpload();
      allow delete: if isRoomHost(roomCode);
      allow update: if false;
    }

    match /room_photos/{roomCode}/{uploaderUid}/{fileName} {
      allow read: if isRoomHost(roomCode) || isRoomParticipant(roomCode);
      allow create: if uploaderUid == request.auth.uid
        && (isRoomHost(roomCode) || isRoomParticipant(roomCode))
        && isAllowedPhotoUpload();
      allow delete: if isRoomHost(roomCode) || uploaderUid == request.auth.uid;
      allow update: if false;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
